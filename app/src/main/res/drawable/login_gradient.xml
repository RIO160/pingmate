<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient for the EditText background -->
    <gradient
        android:startColor="#E4ECF1"
        android:centerColor="#A0B8CA"
        android:endColor="#B7CAD7"
        android:angle="0"/> <!-- 0 degrees for left-to-right gradient -->

    <!-- Rounded corners similar to border-radius: 50px -->
    <corners android:radius="50dp"/>

    <!-- Optional padding inside the EditText background -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
