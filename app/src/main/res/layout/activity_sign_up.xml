<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/gradient2_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="685dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:backgroundTint="#004481">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            >


            <TextView
                android:id="@+id/SingUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="24sp"
                android:textColor="#ffff"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="15dp"/>


            <EditText
                android:id="@+id/SignupFirstName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="First Name"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_user"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/SingUpTitle"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                />


            <EditText
                android:id="@+id/SignupLastName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Last Name"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupFirstName"
                android:padding="5dp"
                android:textSize="20dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_user"
                android:drawablePadding="8dp"
                />


            <EditText
                android:id="@+id/SignupMiddleName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Middle Name"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupLastName"
                android:padding="5dp"
                android:textSize="20dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_user"
                android:drawablePadding="8dp"
                />

            <EditText
                android:id="@+id/SignupUsername"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Username"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupMiddleName"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_user"
                android:drawablePadding="8dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/SignupEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupUsername"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_mail"
                android:drawablePadding="8dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/SignupPassword"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupEmail"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_padlock"
                android:drawablePadding="8dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/SignupRe_Password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Confirm your password"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupPassword"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                android:textColorHint="#80ffffff"
                android:drawableStart="@drawable/image_padlock"
                android:drawablePadding="8dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/DateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Date of Birth MM/DD/YYYY"
                android:inputType="date"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/SignupRe_Password"
                android:padding="5dp"
                android:background="@drawable/roundsu_corner"
                android:drawableStart="@drawable/image_calendar"
                android:drawablePadding="8dp"
                android:textColorHint="#80ffffff"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DateOfBirth"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:backgroundTint="#005F83"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:text="Back"
                android:layout_gravity="start"
                android:backgroundTint="#005F83"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>